        </StackPane>
        <StackPane fx:id="box3" style="-fx-border-color: black; -fx-border-width: 2;">
            <ImageView fx:id="image3" fitWidth="120" fitHeight="90" preserveRatio="true" />
            <Label fx:id="imageLabel3" text="" style="-fx-background-color: rgba(0,0,0,0.5); -fx-text-fill: white;"/>
        </StackPane>
        <StackPane fx:id="box4"  style="-fx-border-color: black; -fx-border-width: 2;">
            <ImageView fx:id="image4" fitWidth="120" fitHeight="90" preserveRatio="true" />
            <Label fx:id="imageLabel4" text="" style="-fx-background-color: rgba(0,0,0,0.5); -fx-text-fill: white;"/>
        </StackPane>
        <StackPane fx:id="box5"  style="-fx-border-color: black; -fx-border-width: 2;">
